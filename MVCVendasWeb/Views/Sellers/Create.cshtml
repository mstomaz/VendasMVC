@model Seller

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-control">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="BirthDate" class="form-label"></label>
                <input type="date" asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="BaseSalary" class="form-label"></label>
                <div class="d-flex align-items-center">
                    <span class="me-2">R$</span>
                    <input asp-for="BaseSalary" class="form-control flex-grow-1" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-secondary"/>
            </div>
        </form>
    </div>

</div>

