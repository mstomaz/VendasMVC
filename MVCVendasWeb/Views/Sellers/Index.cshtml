@model IEnumerable<Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Criar novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th class="bg-success"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
